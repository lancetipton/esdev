{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build",
    "module": "esnext",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@test/headers": ["src/headers"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
